<h1>Create New User</h1>

<%= form_for @user, :html => {class: 'new_user form-horizontal'} do |u| %>
<div class="row"><legend class="col-sm-4 col-sm-offset-4">Create Account:</legend></div>
  <fieldset>
    <div class="form-group">
      <%= u.label :name, 'Name', class: 'col-sm-4 control-label' %>
      <div class="col-sm-5" style="margin-bottom: -32px;">
        <%= u.text_field :name, class: 'form-control', placeholder: "Name here" %><br>
      </div>
    </div>
    <div class="form-group">
      <%= u.label :user_name, 'User Name', class: 'col-sm-4 control-label' %>
      <div class="col-sm-5" style="margin-bottom: -32px;">
        <%= u.text_field :user_name, class: 'form-control', placeholder: "User Name", required: true %><br>
      </div>
    </div>
    <div class="form-group">
      <%= u.label :email, 'Email', class: 'col-sm-4 control-label' %>
      <div class="col-sm-5" style="margin-bottom: -32px;">
        <%= u.text_field :email, class: 'form-control', placeholder: "Email", required: true %><br>
      </div>
    </div>
    <div class="form-group">
      <%= u.label :password, 'Password', class: 'col-sm-4 control-label' %>
      <div class="col-sm-5" style="margin-bottom: -32px;">
        <%= u.password_field :password, class: 'form-control', placeholder: "Password" %><br>
      </div>
    </div>
    <div class="form-group">
      <%= u.label :password_confimation, 'Confirm Password', class: 'col-sm-4 control-label' %>
      <div class="col-sm-5" style="margin-bottom: -32px;">
        <%= u.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm your password" %><br>
      </div>
    </div>
    <div class="form-group" style="margin-bottom: 50px;">
      <div class="col-sm-8 col-sm-offset-4">
        <%= u.submit "Create an Account", class: 'btn btn-success' %>
      </div>
    </div>
  </fieldset>
<% end %>
