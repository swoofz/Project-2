<h1><%= @user.name.capitalize %> Profile Page</h1>
<p>Find me in app/views/user/show.html.erb</p>


<article>
  <% @user.posts.each do |p| %>
    <%= p.title %><br>
    <%= p.body %>
  <% end %>
</article><br>
<h2>Add new or edit posts</h2>
<%= form_for @user do |p| %>
  <%= p.fields_for :posts do |up| %><br>
    <%= up.text_field :title %>
    <%= up.text_field :body %>
    <%= up.check_box :_destroy %>
  <% end %>
  <%= p.submit %>
<% end %>

<%= link_to "Feed", users_path %><br>
<%= link_to "Edit Info", edit_user_path %>
