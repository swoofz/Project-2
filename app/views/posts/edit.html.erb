<h1>Change Post Info</h1>

<%= form_for @post, :html => {class: 'edit_post form-horizontal'} do |f| %>
  <div class="row"><legend class="col-sm-4 col-sm-offset-4">Edit Post Info</legend></div>
  <fieldset>
    <div class="form-group">
      <%= f.label :title, class: 'col-sm-4 control-label' %>
      <div class="col-sm-6" style="margin-bottom: -25px;">
        <%= f.text_field :title, placeholder: 'Anime Name', class: 'form-control' %><br>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :body, class: 'col-sm-4 control-label' %>
      <div class="col-sm-6" style="margin-bottom: -25px;">
        <%= f.text_area :body, placeholder: 'Body', class: 'form-control' %><br>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-4">
      <%= f.submit "Change That Post", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
